{
	"name": "Outlook365 Notifier",
	"version": "0.1",
	"manifest_version": 2,
	"description": "Shows the number of unread emails in your Outlook 365 inbox. Also enables full version of the app for Linux users.",
	"browser_action": {
		"default_icon": "icon19x19-grey.png" 
	},
	"background": {
		"page": "background.html"
	},
	"options_page": "options.html",
	"permissions": [
		"cookies",
		"webRequest",
		"webRequestBlocking",
		"notifications",
		"tabs",
		"*://login.microsoftonline.com/",
		"*://*.outlook.com/"
	]
}
